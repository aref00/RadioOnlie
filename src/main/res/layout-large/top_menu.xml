<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:id="@+id/item1"
            style="@style/MenuDrawer.Widget.Title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/radios"
            android:onClick="browse"
            android:tag="Item no. 1"
            android:text="@string/browse" />

        <TextView
            android:id="@+id/item2"
            style="@style/MenuDrawer.Widget.Title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_drawing2_2"
            android:onClick="fave"
            android:tag="Item no. 2"
            android:text="@string/favourite" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/item3"
            style="@style/MenuDrawer.Widget.Title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/about"
            android:onClick="about"
            android:tag="Item no. 3"
            android:text="@string/about"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/item4"
            style="@style/MenuDrawer.Widget.Title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/exit"
            android:onClick="exit"
            android:tag="Item no. 4"
            android:text="@string/exit" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@android:drawable/arrow_down_float"/>


</LinearLayout>